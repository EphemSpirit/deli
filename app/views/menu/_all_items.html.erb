<div class="container">
  <h1 class="results-header">Main Menu</h1>
</div>

<div class="container main-menu">
  <% items.each do |item| %>
    <div class="card product-card">
      <%= image_tag(item.image, class: "product-image") %>
      <div class="card-body">
        <h5 class="card-title"><%= item.name %></h5>
        <p class="card-text"><%= item.description %></p>
        <%= button_to "Add to Cart", line_items_path(id: item.id, product_id: item.id), class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
