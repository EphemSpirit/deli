<!DOCTYPE html>
<html>
  <head>
    <title>Deli</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css2?family=Cabin&display=swap', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cabin&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <%= link_to "Drew's Delicatessen", root_path, class: "navbar-brand" %>
        <form class="d-flex">
          <%= link_to "Menu", '#', class: "nav-link" %>
          <%= link_to "About Us", about_path, class: "nav-link" %>
          <%= link_to "Contact", contact_path, class: "nav-link" %>
        </form>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
